#!/bin/bash
#
#   curl - test - ajax - read - urls - 200
#




    # variable(s)
    miv_curl="--verbose"
    miv_object='urls'
    miv_method='read_count'
    miv_data=""
    miv_url="miv/api.php?object=$miv_object&method=$miv_method"

    # curl
    curl "$miv_curl"                                \
        --header "Miv-Object: $miv_object"          \
        --header "Miv-Method: $miv_method"          \
        --data "$miv_data"                          \
        "$miv_url"                                  \
        $@




#
#   curl - test - ajax - read - urls - 200
#
